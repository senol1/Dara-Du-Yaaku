<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/html">
    <head>
        <meta charset="UTF-8" />
        <!-- META SECTION -->
        <title>Dara Du Yaaku - Connexion</title>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />

        <link rel="icon" href="{{ asset('bundles/admin/favicon.ico') }}" type="image/x-icon" />
        <!-- END META SECTION -->

        <!-- CSS INCLUDE -->
        <link rel="stylesheet" type="text/css" id="theme" href="{{ asset('bundles/admin/css/theme-default.css') }}"/>
        <!-- EOF CSS INCLUDE -->
    </head>
    <body>


        <div class="login-container">

            <div class="login-box animated fadeInDown">
                <div class="login-logo"></div>
                <div class="login-body">
                    <div class="login-title"><strong>Se connecter</strong> Ã  l'interface d'admin</div>
                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                        {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
                        <a href="{{ path('fos_user_security_logout') }}">
                            {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                        </a>
                    {% endif %}


                    {% if app.request.hasPreviousSession %}
                        {% for type, messages in app.session.flashbag.all() %}
                            {% for message in messages %}
                                <div class="flash-{{ type }} label-danger label">
                                    {{ message }}
                                </div>
                            {% endfor %}
                        {% endfor %}
                    {% endif %}


                    {% block fos_user_content %}

                    {% endblock fos_user_content %}
                        <!--div class="login-or">OR</div>
                        <div class="form-group">
                            <div class="col-md-4">
                                <button class="btn btn-info btn-block btn-twitter"><span class="fa fa-twitter"></span> Twitter</button>
                            </div>
                            <div class="col-md-4">
                                <button class="btn btn-info btn-block btn-facebook"><span class="fa fa-facebook"></span> Facebook</button>
                            </div>
                            <div class="col-md-4">
                                <button class="btn btn-info btn-block btn-google"><span class="fa fa-google-plus"></span> Google</button>
                            </div>
                        </div>
                        <div-- class="login-subtitle">
                            Don't have an account yet? <a href="#">Create an account</a>
                        </div-->
                </div>
                <div class="login-footer">
                    <div class="pull-left">
                        &copy; {{ "now"|date('Y') }} Dara Du Yaaku
                    </div>
                    <div class="pull-right">
                        <a href="#">A propos</a> |
                        <a href="#">Nous contacter</a>
                    </div>
                </div>
            </div>

        </div>

    </body>
</html>
